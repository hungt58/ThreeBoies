generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fontSize  String   @default("16px")
  thumbnail String?
  pinned    Boolean  @default(false)
  topic     Topic    @default(TECHNOLOGY)

  @@index([slug])
  @@index([pinned])
  @@map("post")
}

enum Topic {
  TECHNOLOGY
  HEALTH
  LIFESTYLE
  EDUCATION
  ENTERTAINMENT
}
